<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.recyclerviewtest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- 配置Gliede的GlideModule -->
        <meta-data
            android:name="com.android.recyclerviewtest.utils.imageutil.ConsumerGlideModule"
            android:value="GlideModule" />

        <activity android:name="com.android.recyclerviewtest.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.recyclerviewtest.activity.List1Activity" />
        <activity android:name="com.android.recyclerviewtest.activity.List2Activity" />
        <activity android:name="com.android.recyclerviewtest.activity.Grid1Activity" />
        <activity android:name="com.android.recyclerviewtest.activity.Grid2Activity" />
        <activity android:name="com.android.recyclerviewtest.activity.Grid3Activity" />
        <activity android:name="com.android.recyclerviewtest.activity.Staggered1Activity" />
        <activity android:name="com.android.recyclerviewtest.activity.Staggered2Activity" />
        <activity android:name="com.android.recyclerviewtest.activity.MultipleItemActivity" />
        <activity android:name="com.android.recyclerviewtest.activity.RefreshActivity" />
        <activity android:name="com.android.recyclerviewtest.activity.ItemTouchActivity" />
        <activity android:name="com.android.recyclerviewtest.activity.MyRefreshRecyclerViewActivity" />
    </application>

</manifest>