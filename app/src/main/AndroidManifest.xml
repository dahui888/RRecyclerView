<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.android.recyclerviewtest"
          xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<!-- 配置Gliede的GlideModule -->
		<meta-data
			android:name="com.android.recyclerviewtest.utils.imageutil.ConsumerGlideModule"
			android:value="GlideModule"/>

		<activity android:name=".activity.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".activity.List1Activity"/>
		<activity android:name=".activity.List2Activity"/>
		<activity android:name=".activity.Grid1Activity"/>
		<activity android:name=".activity.Grid2Activity"/>
		<activity android:name=".activity.Grid3Activity"/>
		<activity android:name=".activity.Staggered1Activity"/>
		<activity android:name=".activity.Staggered2Activity"/>
		<activity android:name=".activity.MultipleItemActivity"/>
		<activity android:name=".activity.RefreshActivity"/>
		<activity android:name=".activity.ItemTouchActivity"/>
	</application>

</manifest>
